// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "StandardTerminal",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-c",
        "sess=$(echo '${workspaceFolder}' | tr '/.' '_'); tmux new-session -A -s \"$sess\""
      ],
      "presentation": {
        "echo": false,
        "clear": true,
        "reveal": "always",
        "focus": true,
        "close": true,
        "panel": "dedicated"
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "problemMatcher": []
    },
