// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "StandardTerminal",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "sess=$(echo '${workspaceFolder}' | tr '/.' '_'); tmux-session \"$sess\" || true"
      ],
      "presentation": {
        "echo": false,
        "clear": true,
        "reveal": "always",
        "focus": true,
        "close": true,
        "panel": "dedicated"
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "problemMatcher": []
    },
    {
      "label": "Tmux: Switch to AI",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "sess=$(echo '${workspaceFolder}' | tr '/.' '_'); $HOME/dotfiles/common/.local/bin/tmux-session \"$sess\" 1 --no-attach"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "close": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Tmux: Switch to Terminal",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "sess=$(echo '${workspaceFolder}' | tr '/.' '_'); $HOME/dotfiles/common/.local/bin/tmux-session \"$sess\" 3 --no-attach"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "close": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Tmux: Kill Sessions",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "$HOME/dotfiles/common/.local/bin/kill-tmux"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "close": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Copy Path (tilde)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "printf '%s\\n' \"$($HOME/dotfiles/common/.local/bin/shorten-path \"${file}\")\" | osc-copy"
      ],
      "options": {
        "env": {
          "HOME": "${env:HOME}"
        }
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "close": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
