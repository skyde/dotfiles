    {
        "label": "Run Git CL Format",
        "type": "shell",
        "command": "git cl format",
        "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
