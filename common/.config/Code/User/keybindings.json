  {
    "key": "shift+f6",
    "command": "runCommands",
    "when": "terminalFocus",
    "args": {
      "commands": [
        "workbench.action.terminal.scrollDown",
        "workbench.action.terminal.scrollDown",
        "workbench.action.terminal.scrollDown",
