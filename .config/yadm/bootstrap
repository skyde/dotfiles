#!/usr/bin/env bash
set -euo pipefail

BOOTSTRAP_DIR="$HOME/.config/yadm/bootstrap.d"

if [ -d "$BOOTSTRAP_DIR" ]; then
  for script in "$BOOTSTRAP_DIR"/*.sh; do
    [ -e "$script" ] || continue
    bash "$script"
  done

  if command -v pwsh >/dev/null 2>&1; then
    for script in "$BOOTSTRAP_DIR"/*.ps1; do
      [ -e "$script" ] || continue
      pwsh -File "$script"
    done
  fi
fi
