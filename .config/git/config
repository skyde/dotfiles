[core]
    pager = delta --features=side-by-side

[interactive]
    diffFilter = delta --color-only

[delta]
  true-color = always
  navigate = true # use n and N to move between diff sections
  light = false
  hyperlinks = true
  side-by-side = false

[merge]
    conflictstyle = diff3
    tool = vscode

[mergetool]
    prompt = false

[mergetool "vscode"]
    cmd = code --wait --merge $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true

[diff]
    colorMoved = default
    tool = vscode
    algorithm = histogram

[difftool]
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
    prompt = false
    trustExitCode = true

[difftool "nvimdiff"]
    cmd = nvim -f -d "$LOCAL" "$REMOTE"

[mergetool "nvimdiff3"]
    cmd = nvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
    trustExitCode = false

[delta "side-by-side"]
  side-by-side = true
  line-numbers = true
  syntax-theme = base16-256
